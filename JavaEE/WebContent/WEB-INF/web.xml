<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Java-EE-Servlet-Demonstrations</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Servlet Module 2 Démonstration 1</description>
    <servlet-name>PremierServletConfigurationXml</servlet-name>
    <servlet-class>fr.marcharnist.javaee.PremierServletConfigurationXml</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PremierServletConfigurationXml</servlet-name>
    <url-pattern>/servlet/PremierServletConfigurationWebXML</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/404_500/500.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404_500/404.html</location>
  </error-page>
  <servlet>
    <description>Servlet Module 2 Démonstration 8</description>
    <servlet-name>ServletAvecParametreInitialisationWebXMLII</servlet-name>
    <servlet-class>fr.marcharnist.javaee.ServletAvecParametreInitialisationWebXMLII</servlet-class>
    <init-param>
      <description>Un paramètre d'initialisation</description>
      <param-name>NOM_PARAMETRE</param-name>
      <param-value>coucou</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAvecParametreInitialisationWebXMLII</servlet-name>
    <url-pattern>/ServletAvecParametreInitialisationWebXMLII</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Paramétrage d'une JSP présente dans le répertoire WEB-INF</description>
    <servlet-name>premiereJSPDansWEB_INF</servlet-name>
    <jsp-file>/WEB-INF/modules/module3/demonstrations/premiereJSPDansWEB-INF.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>premiereJSPDansWEB_INF</servlet-name>
    <url-pattern>/modules/module3/demonstrations/secondePremiereJSP</url-pattern>
  </servlet-mapping>
</web-app>